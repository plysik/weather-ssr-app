{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "typeRoots": ["src/common/typings", "node_modules/@types"],
    "paths": {
      "@components/*": ["src/components/*"],
      "@/*":           ["src/*"],
      "@/lib/*":       ["src/components/lib/*"]
    }
  },
  "include": ["src/**/*", "webpack.client.ts", "webpack.server.ts"],
  "exclude": ["dist", "public", "tailwind.config.js", "node_modules", "src/common/typings","postcss.config.js"]
}